<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/custom_item_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_item_iv_heigt"
            android:scaleType="centerCrop"
            android:src="@drawable/car"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/custom_item_car_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="car type"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_item_iv" />

        <TextView
            android:id="@+id/custom_item_color_"
            android:layout_width="@dimen/custom_item_color_width"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/pallete"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_item_car_type" />

        <TextView
            android:id="@+id/custom_item_dpl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/gasfuel"
            android:drawablePadding="5dp"
            android:padding="5sp"
            android:text="dpl"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/custom_item_color_"
            app:layout_constraintTop_toBottomOf="@+id/custom_item_car_type" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>